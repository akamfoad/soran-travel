<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/carousilParent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselmain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fillColor="#ffffff"
                    app:pageColor="#000000"
                    app:radius="6dp"
                    app:slideInterval="5000"
                    app:strokeColor="#f77777"
                    app:strokeWidth="1dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shortcuts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7CCEFE"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/carousilParent">

                <Button
                    android:id="@+id/HotelBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableTop="@drawable/hotel_btn_icon"
                    android:text="Hotels" />

                <Button
                    android:id="@+id/ResturantBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableTop="@drawable/hamburger_btn_icon"
                    android:text="Resturant" />

                <Button
                    android:id="@+id/WhereToGoBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableTop="@drawable/where_to_go_btn_icon"
                    android:text="Where To Go" />

            </LinearLayout>

            <TextView
                android:id="@+id/about_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"

                android:background="@drawable/about_text_caption_bg_radius"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="5dp"
                android:text="About"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shortcuts_container" />

            <LinearLayout
                android:id="@+id/about_text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_title_text">

                <TextView
                    android:id="@+id/GENERAL_INFO_TITLE_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="General Info:"
                    android:textColor="#ff000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/GENERAL_INFO_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="Soran (Kurdish: سۆران ,Soran‎) or Diana is a city in Erbil Governorate, and the capital of Soran District. Diana is one of the largest cities in Kurdistan Region, and is expected to increase within the next ten years by a further 50,000 people. "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/about_title_text" />

                <TextView
                    android:id="@+id/ETYMOLOGY_TITLE_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Title:"
                    android:textColor="#ff000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ETYMOLOGY_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text='The name Diana is derived from the Kurdish word for "Christian", since it was originally an Assyrian Christian village prior to expanding in the last 20 years. The Name Soran is derived from the Kurdish Soran tribe who have settled in this area along with the Assyrians. '
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/about_title_text" />

                <TextView
                    android:id="@+id/HISTORY_TITLE_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="History:"
                    android:textColor="#ff000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/HISTORY_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="The city of Diana was originally a small village inhabited by Nochiya Assyrians of the Rawanduz Clan ruled by Kurdish Aghas of the Soran tribe,[4] and continued to be for many years up until an influx of Kurdish refugees turned it into a large city. Since the early 1990s Soran District has been flooded with Kurdish refugees returning from Iran, where they fled to between 1974 and 1989 to avoid the Second Iraqi–Kurdish War and the Al-Anfal Campaign. Due to this influx, The population grew from 27,000 in 1991, before the Kurdish uprising and establishment of Iraqi Kurdistan, to about 175,000 in the last fifteen years. Most of these returnees settled in and around Soran, unable to return to their original villages which had been destroyed by the Baathist regime’s army, or unwilling to return to locations still under threat of Turkish bombings and incursions due to the presence of PKK forces there.  The city's original name, Siddeeq was changed to Soran, Siddeeq being a camp which was constructed in the late 70s and settled with Kurdish inhabitants from the surrounding areas who had been forcefully displaced by Saddam Hussein's regime. After the uprising in 1991, Siddeeq, which is an Arabic name, was changed to the Kurdish name of Soran. However, the city of Diyana has kept its name.  Diana is located on the Hamilton Road connecting Arbil to Iran through Hajomaran (a sub-district of Choman district). "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/about_title_text" />

                <TextView
                    android:id="@+id/LANGUAGES_TITLE_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Languages:"
                    android:textColor="#ff000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/LANGUAGES_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="Both Sorani and Bahdini are equally common and used in the region. Persian is widely spoken along with the two dialects of Kurdish because a large number of the inhabitants of the town are returnees from Iran, and a large number of them were even born and raised in Iran. Assyrians of Hawdiyaan village and Diyana speak Syriac their native language along with Kurdish and Arabic and have their own Syriac schools. "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/about_title_text" />

                <TextView
                    android:id="@+id/WIKIPEDIA_LINK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="@string/WIKIPEDIA_REFERENCE_TEXT"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/about_title_text" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>